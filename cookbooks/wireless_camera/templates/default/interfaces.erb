# The loopback network interface
auto lo
iface lo inet loopback

allow-hotplug <%= @ethernet_interface %>
iface <%= @ethernet_interface %> inet dhcp

auto <%= @wlan_interface %>
iface <%= @wlan_interface %> inet dhcp
<% @wpa_options.each do |option, value| %>        wpa-<%= option %> <%= value %>
<% end %>
